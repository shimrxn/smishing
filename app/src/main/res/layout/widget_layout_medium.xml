<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="12dp">

    <!-- White card container with background logo -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="12dp"
        android:elevation="4dp">

        <!-- Faint background logo -->
        <ImageView
            android:id="@+id/widget_bg_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/smishing_detection_logo"
            android:scaleType="center"
            android:alpha="0.5"
            android:contentDescription="Background logo" />

        <!-- Foreground content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <!-- Title -->
            <TextView
                android:id="@+id/widget_medium_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smishing Detection"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <!-- Detection Count -->
            <TextView
                android:id="@+id/widget_medium_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginBottom="4dp" />

            <!-- Icons Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/widget_open_app_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_open_app"
                    android:layout_marginEnd="16dp"
                    android:tooltipText="Open App"
                    android:contentDescription="Opens the Smishing Detection App" />

                <ImageView
                    android:id="@+id/widget_report_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_report"
                    android:tooltipText="Report Smishing"
                    android:contentDescription="Report a Smishing Attempt" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:id="@+id/widget_medium_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated: 1:36 PM"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
